{
  "name": "@carbon/spec",
  "version": "0.0.0",
  "repository": "git@github.com:carbon-design-system/spec.git",
  "license": "Apache-2.0",
  "scripts": {
    "build": "node tasks/build.js",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "format": "prettier --write \"**/*.{scss,css,js,md,ts}\"",
    "format:diff": "prettier --list-different \"**/*.{scss,css,js,md,ts}\"",
    "precommit": "lint-staged",
    "deploy": "yarn build && gh-pages -d public",
    "watch": "nodemon --exec 'yarn build' -w spec -e md"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.1.1",
    "@commitlint/config-conventional": "^7.1.1",
    "gh-pages": "^1.2.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "nodemon": "^1.18.4",
    "prettier": "^1.14.2",
    "spec-md": "^0.6.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.md": [
      "yarn format",
      "git add"
    ]
  },
  "prettier": {
    "jsxBracketSameLine": true,
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
