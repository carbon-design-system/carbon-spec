{
  "name": "@carbon/spec",
  "private": true,
  "description": "The specification for the Carbon Design System",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "module": "es/index.js",
  "repository": "https://github.com/carbon-design-system/carbon-spec",
  "bugs": "https://github.com/carbon-design-system/carbon-spec/issues",
  "files": [
    "es",
    "lib",
    "src",
    "umd"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "yarn clean && rollup -c tasks/rollup/config.js",
    "ci-check": "yarn format:diff && yarn test --ci --reporters=default --reporters=jest-junit",
    "clean": "rimraf es lib umd junit.xml",
    "format": "prettier --write \"**/*.{scss,css,js,md}\"",
    "format:diff": "prettier --list-different \"**/*.{scss,css,js,md}\"",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/runtime": "^7.2.0",
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "chai": "^4.2.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "jest-circus": "^23.6.0",
    "jest-junit": "^5.2.0",
    "jsdom": "^13.2.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.3",
    "rollup": "^1.1.0",
    "rollup-plugin-babel": "^4.2.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,md}": [
      "yarn format",
      "git add"
    ]
  },
  "prettier": {
    "jsxBracketSameLine": true,
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "setupFiles": [
      "./tasks/jest/setup.js"
    ],
    "setupTestFrameworkScriptFile": "./tasks/jest/chai.js",
    "testMatch": [
      "<rootDir>/**/__tests__/**/*.js?(x)",
      "<rootDir>/**/?(*.)(spec|test).js?(x)",
      "<rootDir>/**/?(*-)(spec|test).js?(x)"
    ],
    "transform": {
      "^.+\\.(js|jsx)$": "./tasks/jest/jsTransform.js",
      "^.+\\.css$": "./tasks/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "./tasks/jest/fileTransform.js"
    },
    "testRunner": "jest-circus/runner",
    "testPathIgnorePatterns": [
      "/cjs/",
      "/dist/",
      "/es/",
      "/fixtures/",
      "/lib/"
    ],
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "watchPathIgnorePatterns": []
  }
}
